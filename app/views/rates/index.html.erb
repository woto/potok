<p id="notice"><%= notice %></p>

<h1>Rates</h1>

<table>
  <thead>
    <tr>
      <th>From currency</th>
      <th>To currency</th>
      <th>Buy</th>
      <th>Sell</th>
      <th>Receive date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @rates.each do |rate| %>
      <tr>
        <td><%= rate.from_currency %></td>
        <td><%= rate.to_currency %></td>
        <td><%= rate.buy %></td>
        <td><%= rate.sell %></td>
        <td><%= rate.receive_date %></td>
        <td><%= link_to 'Show', rate %></td>
        <td><%= link_to 'Edit', edit_rate_path(rate) %></td>
        <td><%= link_to 'Destroy', rate, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

